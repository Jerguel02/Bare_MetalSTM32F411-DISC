#include "stm32f4xx.h"

#define TIME2EN		(1U<<0)
#define CR1_CEN		(1U<<0)

void tim2_1hz_init(void)
{
	//Enable clock access to tim2
	RCC->AHB1ENR |= TIME2EN;

	//Set prescalder value
	TIM2->PSC = 1600 - 1;//16MHz/1600 = 10kHz

	//Set auto-reload value
	TIM2->ARR = 10000 - 1//10000/10000 = 1;

	//CLear counter
	TIM2->CNT = 0;
	//Enable timer
	TIM2->CR1 = CR1_CEN;
}
